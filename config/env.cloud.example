# Cloud Environment Configuration for Yandex Cloud
# Copy this file to .env and update values for your deployment

# Database Configuration
POSTGRES_DB=image_processing
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# Application Security
SECRET_KEY=your_very_secure_secret_key_here_change_in_production
DEBUG=False

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=2
LOG_LEVEL=info

# Celery Configuration
CELERY_WORKERS=2

# Flower Monitoring
FLOWER_USER=admin
FLOWER_PASSWORD=your_flower_password_here

# External Access (for Yandex Cloud)
DOMAIN_NAME=your-domain.com
SSL_EMAIL=your-email@example.com

# File Upload Settings
MAX_FILE_SIZE=52428800  # 50MB
UPLOAD_DIR=uploads

# Redis Configuration
REDIS_MAX_MEMORY=256mb
REDIS_MAX_MEMORY_POLICY=allkeys-lru

# Health Check Settings
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# Resource Limits
BACKEND_MEMORY_LIMIT=1G
WORKER_MEMORY_LIMIT=1G
DB_MEMORY_LIMIT=512M
REDIS_MEMORY_LIMIT=256M
